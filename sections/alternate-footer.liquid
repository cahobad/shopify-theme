<footer class="footer" role="contentinfo">
  <div class="footer__container">
    <section class="footer-container">
      <h2 class="footer-container__heading">About</h2>

      <address class="footer-container__text">
        Susparsa Store
        <br />
        Geneva, Switzerland
      </address>

      <ul class="footer__social-links" role="list">
        <li class="social-links__item">
          <a
             class="social-links__link social-links__link--icon"
             href="/"
             target="_blank"
             >
            <img
                 class="social-links__icon"
                 src="https://cahobad.github.io/spurit-homework/images/facebook.svg"
                 alt=""
                 />
            <span class="visually-hidden">open facebook in new tab</span>
          </a>
        </li>
        <li class="social-links__item">
          <a
             class="footer-navigation__link footer-navigation__link--icon"
             href="/"
             target="_blank"
             >
            <img
                 class="footer-container__social-icon"
                 src="https://cahobad.github.io/spurit-homework/images/instagram.svg"
                 alt=""
                 />
            <span class="visually-hidden">open instagram in new tab</span>
          </a>
        </li>
      </ul>
    </section>

    <section class="footer-container">
      <h2 class="footer-container__heading">Company</h2>
      <nav class="footer-navigation" aria-label="company">
        <ul class="footer-navigation__links-list" role="list">
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Women</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Men</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Kids</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">About Us</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Our Materials</a>
          </li>
        </ul>
      </nav>

    </section>

    <section class="footer-container">
      <h2 class="footer-container__heading">Useful Links</h2>
      <nav class="footer-navigation" aria-label="useful">
        <ul class="footer-navigation__links-list" role="list">
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Privacy Policy </a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Shipping Policy</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Return & Refund Policy</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/">Terms of Service</a>
          </li>
          <li class="footer-navigation__links-item">
            <a class="footer-navigation__link" href="/"> Contact Us</a>
          </li>
        </ul>
      </nav>

    </section>
  </div>
  <div class="footer__copyright-container">
    <span><small class="footer__copyright">Â© Susparsa 2021</small></span>
  </div>
</footer>


{% schema %}
  {
    "name": "alternate-footer",
	"max_blocks": 4,
	"blocks": [
		{
			"name": "About",
			"type": "about",
			"settings": [
				{
                  "type": "text",
                  "id": "footer_linklist_title",
                  "label": "Heading",
                  "default": "About"
                },
				{
                  "type": "richtext",
                  "id": "paragraph",
                  "label": "Paragraph"
                },
				{
                  "type": "text",
                  "id": "footer_facebook_link",
                  "label": "Facebook link",
                  "default": "https://facebook.com/"
                },
				{
                  "type": "text",
                  "id": "footer_instagram_link",
                  "label": "Instagram link",
                  "default": "https://instagram.com/"
                }
			]
		},
		{
			"name": "Menu",
			"type": "menu",
			"settings": [
				{
                  "type": "text",
                  "id": "footer_nav_title",
                  "label": "Heading",
                  "default": "Navigation"
                },
                {
                  "type": "link_list",
                  "id": "footer_menu",
                  "label": "Menu"
                }
			]
		}
	]
  }
{% endschema %}


